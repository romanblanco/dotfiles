order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "ipv6"
order += "path_exists PROTON"
order += "path_exists RH"
order += "battery 0"
order += "cpu_usage 0"
order += "cpu_temperature 0"
order += "tztime local"

path_exists PROTON {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        # sudo nmcli connection up "vpn-name)"
        path = "/proc/sys/net/ipv4/conf/tun0"
        format_down = "PROTON: no"
}

path_exists RH {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        # sudo nmcli connection up "vpn-name)"
        path = "/proc/sys/net/ipv4/conf/redhat0"
        format_down = "RH: no"
}

wireless _first_ {
        format_up = "%essid %quality %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "%ip (%speed)"
        format_down = ""
}

ipv6 {
        format_down = ""
}

battery 0 {
        format = "%status %percentage"
        format_down = ""
        path = "/sys/class/power_supply/BAT0/uevent"
        last_full_capacity = true
}

tztime local {
        format = "%a %e.%m.%Y %H:%M"
}

cpu_usage {
        format = "CPU %usage"
}

cpu_temperature 0 {
        format = "%degreesÂ°C"
}

volume master {
        format = "VOL %volume"
        format_muted = "MUT  0%%"
        device = "hw:0"
        mixer = "Master"
        mixer_idx = 0
}
