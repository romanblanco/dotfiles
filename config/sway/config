# swaymsg -t get_tree

for_window [class="(?i)firefox"] border none
for_window [class="(?i)firefox"] layout tabbed
for_window [app_id="firefox"] border none
for_window [app_id="firefox"] layout tabbed
for_window [window_role="pop-up"] floating enable
for_window [title="Firefox — Sharing Indicator"] floating enable, border none, move position 0 0
for_window [class="(?i)telegram"] layout tabbed
for_window [class="Spotify"] border none
for_window [class="Spotify"] layout tabbed
for_window [title="Gqrx*"] layout tabbed
for_window [title=".*KeePassXC"] layout tabbed

no_focus [title="Firefox — Sharing Indicator"]

assign [title=".*Mozilla*"] → 1
assign [class="Thunderbird"] → 2
assign [title=".*Mozilla*"] → 1
assign [class="(?i)telegram"] → 2
assign [class="(?i)vlc"] → 5
assign [class="Transmission"] → 5
assign [class="(?i)libreoffice*"] → 5
assign [class="(?i)gqrx"] → 5
assign [class="Gimp"] → 5
assign [class="Steam"] → 5
assign [class="(?i)Spotify"] → 5
assign [title=".*Firefox.*" window_role="browser"] → 8
