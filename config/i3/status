order += "battery 0"
order += "cpu_usage 0"
order += "cpu_temperature 0"
order += "tztime local"

battery 0 {
        format = "%status %percentage"
        format_down = ""
        path = "/sys/class/power_supply/BAT0/uevent"
        last_full_capacity = true
}

tztime local {
        format = "%a %e.%m.%Y %H:%M"
}

cpu_usage {
        format = "CPU %usage"
}

